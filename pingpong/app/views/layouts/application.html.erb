<!DOCTYPE html>
<html>
  <head>
    <title>Pingpong</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Begin Flash -->
    <% flash.each do |name, message| %>
      <p>
        <i><%= "#{name} : #{message}" %></i>
      </p>
    <% end %>
    <!-- End Flash -->

    <%= yield %>
  </body>
</html>
